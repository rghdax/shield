[Unit]
Description=uWSGI Emperor
After=syslog.target

[Service]
ExecStart=/var/www/shield/uwsgi --ini /etc/uwsgi/emperor.ini
# Requires systemd version 211 or newer
RuntimeDirectory=uwsgi
Restart=always
KillSignal=SIGQUIT
Type=notify
StandardError=syslog
NotifyAccess=all

[Install]
WantedBy=multi-user.target

#/usr/local/bin/uwsgi
